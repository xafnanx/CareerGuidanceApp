<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginTop="5dp"
    android:padding="8dp"
    android:background="#fff"
    android:id="@+id/clg_container">
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/loading_shape"
        android:id="@+id/clg_Logo"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clg_Name"
            android:text="Collage Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"></TextView>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clg Location"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:id="@+id/clg_Location"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clg_Rating"
            android:text="0.0"
            android:layout_marginTop="5dp"
            android:background="@drawable/lavender_background"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_baseline_star_24"
            android:padding="3dp"></TextView>
        
    </LinearLayout>
</LinearLayout>